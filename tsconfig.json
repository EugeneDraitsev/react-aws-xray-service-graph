{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "target": "es5",
    "lib": [
      "es2018",
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "types": [
    "typePatches"
  ]
}
